<h1>Listing posts</h1>
 
 
 <%= link_to 'New post', new_post_path %>
 
<table>
  <tr>
  	<th>ID</th>
    <th>Title</th>
    <th>Text</th>
    <th>Action</th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.id %></td>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= link_to 'Show', post %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
    </tr>
  <% end %>
</table>


